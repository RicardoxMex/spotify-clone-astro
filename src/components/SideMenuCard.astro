---
import type { Playlist } from '@/lib/data'
interface Props {
    playlist:Playlist
}

const {playlist} = Astro.props

const {id, cover, title, artists, color} = playlist

const artisrsString = artists.join(", ")
---

<a class="playlist-item flex relative p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-800" href={`/playlist/${id}`}>
    <picture class="h-12 w-12 flex-none">
        <img 
            src={cover} 
            alt={`Cover of ${title} by ${artisrsString}`}
            class="object-cover w-full rounded-md"
        >
    </picture>
    <div class="flex flex-auto flex-col truncate">
        <h4 class="text-white text-sm">{title}</h4>
        <span class="text-xs text-gray-400">{artisrsString}</span>
    </div>
</a>